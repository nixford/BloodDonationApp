@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body id="container1">
    <div class="signup-form">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="Input.Id" class="control-label"></label>
                    <select asp-for="Input.Id"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.Role>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="Input.Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <div class="text-center">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a></div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
