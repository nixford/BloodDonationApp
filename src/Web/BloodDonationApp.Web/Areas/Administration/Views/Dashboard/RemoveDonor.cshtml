@model RemoveUserInputModel
@using BloodDonationApp.Web.ViewModels.Administration.Users

<div class="container">
    <form asp-area="Administration" asp-controller="Dashboard" asp-action="RemoveDonor" method="post">
        <h4>Insert a donor's email.</h4>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>