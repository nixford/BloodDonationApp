@model BloodDonationApp.Web.ViewModels.Hospital.AllHospitalsViewModel
@{
    ViewData["Title"] = "Registered Hospitals";
}

<body style="background-color:#f2fcfa">
    <div class="py-5">
        <div class="container">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div style="padding: 5%;">
                <table class="table table-striped table-responsive-md btn-table">
                    <thead class="thead" style="background-color:limegreen">
                        <tr>
                            <th scope="col">Hospital name:</th>
                            <th scope="col">Adress:</th>
                            <th scope="col">Contacts:</th>
                            <th scope="col">Recipients count:</th>
                            <th scope="col">Donate Directly to Hospital:</th>
                            <th scope="col">Blood Reservs:</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hospital in @Model.Hospitals)
                        {
                            <tr>
                                <th>@hospital.Name</th>
                                <td>@Html.DisplayFor(x => hospital.Location)</td>
                                <td>
                                    <form asp-area="" asp-controller="Hospitals" asp-action="Contacts" method="get">
                                        <button class="btn btn-link">Contacts</button>
                                        <input type="hidden" name="hospitalDataId" value="@hospital.Id" />
                                    </form>
                                </td>
                                <td>@hospital.RecipientCount</td>
                                <td>
                                    <form asp-area="" asp-controller="DonationEvents" asp-action="CreateWORequest" method="get">
                                        <button class="btn btn-outline-danger"> Donate Whitout Request</button>
                                        <input type="hidden" name="hospitalId" value="@hospital.Id" />
                                    </form>
                                </td>
                                <td>
                                    <form asp-area="" asp-controller="Hospitals" asp-action="DetailsHospital" method="get">
                                        <button class="btn btn-warning">Blood Reservs</button>
                                        <input type="hidden" name="hospitalDataId" value="@hospital.Id" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Hospitals"
                       asp-action="AllHospitals"
                       asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                var active = i == this.Model.CurrentPage ? "active" : string.Empty;

                <li class="page-item @active">
                    <a class="page-link"
                       asp-controller="Hospitals"
                       asp-action="AllHospitals"
                       asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Hospitals"
                       asp-action="AllHospitals"
                       asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</body>


