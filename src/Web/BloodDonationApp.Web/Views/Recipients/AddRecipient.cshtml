@model BloodDonationApp.Web.ViewModels.Recipient.RecipientInputModel
@{
    ViewData["Title"] = "AddRecipient";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container-fluid">
    <div class="col-md-2">
        <form asp-action="AddRecipient" asp-controller="Recipients" method="post">
            <h4>Insert the necessery donor data.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MiddleName"></label>
                <input asp-for="@Model.MiddleName" class="form-control" />
                <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Age"></label>
                <input asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NeededQuantity"></label>
                <input asp-for="@Model.NeededQuantity" class="form-control" />
                <span asp-validation-for="@Model.NeededQuantity" class="text-danger"></span>
            </div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.RecipientEmergency" class="control-label"></label>
                    <select asp-for="@Model.RecipientEmergency"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.EmergencyStatus>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.BloodGroup" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.BloodGroup" class="control-label"></label>
                    <select asp-for="@Model.BloodGroup"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.BloodGroup>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.BloodGroup" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.RhesusFactor" class="control-label"></label>
                    <select asp-for="@Model.RhesusFactor"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.RhesusFactor>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.RhesusFactor" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Insert Recipient</button>
        </form>
    </div>
</div>
