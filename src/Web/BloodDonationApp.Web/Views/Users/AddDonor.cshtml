@model BloodDonationApp.Web.ViewModels.Donor.DonorDataProfileInputModel
@{
    ViewData["Title"] = "AddDonor";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container-fluid">
    <div class="col-md-2">
        <form asp-action="AddDonor" asp-controller="Users" method="post">
            <h4>Insert the necessery donor data.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MiddleName"></label>
                <input asp-for="@Model.MiddleName" class="form-control" />
                <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Age"></label>
                <input asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.BloodGroup" class="control-label"></label>
                    <select asp-for="@Model.BloodGroup"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.BloodGroup>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.BloodGroup" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.RhesusFactor" class="control-label"></label>
                    <select asp-for="@Model.RhesusFactor"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.RhesusFactor>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.RhesusFactor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Country"></label>
                <input asp-for="@Model.Country" class="form-control" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.City"></label>
                <input asp-for="@Model.City" class="form-control" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AdressDescription"></label>
                <input asp-for="@Model.AdressDescription" class="form-control" />
                <span asp-validation-for="@Model.AdressDescription" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.DonorAveilableStatus" class="control-label"></label>
                    <select asp-for="@Model.DonorAveilableStatus"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.EmergencyStatus>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.DonorAveilableStatus" class="text-danger"></span>
                </div>
            </div>
            <<div class="form-group">
                <label asp-for="@Model.ExaminationDate"></label>
                <input asp-for="@Model.ExaminationDate" class="form-control" />
                <span asp-validation-for="@Model.ExaminationDate" class="text-danger"></span>
            </div>
            <<div class="form-group">
                <label asp-for="@Model.DiseaseName"></label>
                <input asp-for="@Model.DiseaseName" class="form-control" />
                <span asp-validation-for="@Model.DiseaseName" class="text-danger"></span>
            </div>
            <<div class="form-group">
                <label asp-for="@Model.DiseaseDescription"></label>
                <input asp-for="@Model.DiseaseDescription" class="form-control" />
                <span asp-validation-for="@Model.DiseaseDescription" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-offset-2">
                <div class="form-group">
                    <label asp-for="@Model.DiseaseStatus" class="control-label"></label>
                    <select asp-for="@Model.DiseaseStatus"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<BloodDonationApp.Data.Models.Enums.DiseaseStatus>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="@Model.DiseaseStatus" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Insert Data</button>
        </form>
    </div>
</div>
